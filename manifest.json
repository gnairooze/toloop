{

    "manifest_version": 2,
    "name": "ToLoop",
    "version": "1.0",
  
    "description": "Plays youtube video in loopvideos",
  
    "icons": {
      "48": "icons/toloop-48.png"
    },
  
    "permissions": [
			"tabs"
	  ],
	
	  "browser_action": {
	    "default_icon": "icons/toloop-48.png",
	    "default_title": "to Loopvideos"
	  },
  
    "page_action": {
      "show_matches": ["https://*.youtube.com/*"],
      "browser_style": true,
      "default_icon": {
        "48": "icons/toloop-48.png"
      },
      "default_title": "to Loopvideos"
    },

	  "background": {
	    "scripts": ["toloop.js"]
	  },
  
    "applications": {
      "gecko": {
        "id": "toloop@rashy-team.com"
      }
    }
  }